<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[25vw] h-[auto] bg-zinc-100 px-10 py-2 rounded-[30px]">
    <img class="w-[40px] h-40px bg-center block ml-auto mr-auto py-3"  src="/images/pinterest.png" alt="Pinterest">
<h1 class="text-2xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Create New account</h1>
<form action="/register" method="post">
  <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="text" name="username" placeholder="username" >
  <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="text" name="fullname" placeholder="FullName" >
  <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="email" name="email" placeholder="email" >
  <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="number" name="contact" placeholder="contact" >
  <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="password" name="password" placeholder="password" >
  <input class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Register" >
  <p class="text-xs font-semibold text-zinc-700 mt-6 w-2/3 mx-auto text-center">Terms of Service  Opens a new tab and acknowledge you've read our Privacy Policy.</p>
  <a class="mt-10 px-11 text-sm font-semibold text-zinc-700 text-center " href="/">Login Existing Account?</a>
</form>
  </div>
</div>
<% include ./partials/footer.ejs %>
