<% include ./partials/header.ejs %>
<div class="profile w-full min-h-[2vh] pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center mt-5">
        <div class="relative">
            <span id="uploadicon" class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                <i class="ri-pencil-line"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>
        <h1 class="text-3xl font-semibold text-zinc-700 mt-5"><%= user.name%></h1>
        <h3 class="text-md text-zinc-500">@<%= user.username %></h3>
        <a href="/edit" class="mt-2 px-7 py-2 mb-4 bg-zinc-700 rounded-full text-sm text-white">Edit</a>
        <a href="/add" class="px-10 py-2 rounded-3xl bg-red-600 text-white tex-xs font-semibold mt-5 mb-4">Add New Post</a>
    </div>
</div>
<div class="cards flex flex-wrap gap-10 px-10 mt-10">
    <div class="card">
        <div class="w-52 h-52 bg-zinc-200 rounded-md">
            <img class="w-full h-full object-cover" src="/images/uploads/<%=user?.posts[0]?.image%>" alt="">
        </div>
        <a href="/show/posts" class=" inline-block text-xl font-semibold mt-5">Your Uploaded</a>
        <h5 class="text-sm font-medium"><%= user.posts.length %></h5>
    </div>
</div>
</div>

<script>

    document.querySelector("#uploadicon").addEventListener("click", function () {
        document.querySelector("#uploadform input").click();
    })
    document.querySelector("#uploadform input").addEventListener("change", function(){
document.querySelector("#uploadform").submit();
 });

</script>
<% include ./partials/footer.ejs %>