<% include ./partials/header.ejs %>
<div class="w-full miin-h-screen bg-zinc-800 px-10 py-5 text-white">
<h1 class="text-xl">Create New Post.</h1>
<hr class="opacity-10 mt-3">
<form action="createpost" method="post" enctype="multipart/form-data">
  <input class="block w-1/3" type="file" name="postimage">
  <input class="block w-1/3 px-3 py-2 rounded-md mt-2 text-black" type="text"  placeholder="Titel" name="title">
  <textarea class="block w-1/3 px-3 py-2 rounded-md mt-2 text-black" type="text" placeholder="Description" name="description"></textarea>
  <input class="block w-1/3 px-3 py-2 rounded-md mt-2 bg-red-600"  type="submit" name="" value="Create Post">
</form>
</div>
